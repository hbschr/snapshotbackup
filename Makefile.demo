isofile := demo/btrfs.img
isosize := 500M
mnt_dir := demo/backups
script  := snapshotbackup
config  := demo/config.ini
opts    :=

.NOTPARALLEL:

help:
	@echo 'no user-friendly help here, please consult `demo/Makefile` and `demo/config.ini` and have fun!'

sleep:
	sleep 1s

setup:
	mkdir -p $(mnt_dir)
	fallocate -l $(isosize) $(isofile)
	mkfs.btrfs $(isofile)
	sudo mount -o loop $(isofile) $(mnt_dir)
	sudo chmod a+w $(mnt_dir)

backup:
	$(script) $(opts) -c $(config) backup demo

backup-checksum:
	$(script) $(opts) -c $(config) backup demo --checksum

list:
	$(script) $(opts) -c $(config) list demo

prune:
	$(script) $(opts) -c $(config) prune demo

.IGNORE: clean
clean:
	sudo umount $(mnt_dir)
	rmdir $(mnt_dir)
	rm $(isofile)

version:
	snapshotbackup -v

test: version setup backup sleep backup-checksum list prune clean
